<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adsoft.githubchallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.GitHubApplication"
        android:allowBackup="false"
        android:icon="@drawable/github_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/github_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activities.UserDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activities.LoginActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>